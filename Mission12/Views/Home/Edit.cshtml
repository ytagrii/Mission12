@{
    ViewData["Title"] = "Update Booking";
}

@model Signup

<h1>@ViewData["Title"]</h1>
<h4>Appointment Date: @ViewBag.Datey.ToLongDateString()</h4>
<h4>Appointment Time: @ViewBag.Datey.ToString("h:mm tt")</h4>

<form class="form" method="post" asp-controller="">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="GroupName">Group Name</label>
        <input class="form-control" asp-for="GroupName" />
    </div>
    <div class="form-group">
        <label asp-for="Size">Group Size</label>
        <select class="form-control" asp-for="Size">
            <option value=0>Group Size</option>
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value=5>5</option>
            <option value=6>6</option>
            <option value=7>7</option>
            <option value=8>8</option>
            <option value=9>9</option>
            <option value=10>10</option>
            <option value=11>11</option>
            <option value=12>12</option>
            <option value=13>13</option>
            <option value=14>14</option>
            <option value=15>15</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input class="form-control" asp-for="PhoneNumber">
    </div>

    <input asp-for="SignupId" value="@Model.SignupId" type="hidden"/>
    <input asp-for="AppointmentId" value="@ViewBag.App.BookingId" type="hidden" />
    <button type="submit" class="btn btn-primary btn-lg">Update Appointment</button>
    <a class="btn btn-secondary btn-lg" asp-controller="Home" asp-action="AllAppointments">Cancel</a>
</form>

